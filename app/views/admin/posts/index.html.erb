<%= link_to 'New Post', new_admin_post_path %>

<table>
  <thead>
  <tr>
    <td>タイトル</td>
    <td>URL</td>
    <td>作成日</td>
    <td>更新日</td>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.url %></td>
      <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= post.updated_at.strftime('%Y/%m/%d') %></td>
      <td><%= link_to 'Edit', edit_admin_post_path(post) %></td>
      <td><%= link_to 'Destroy', admin_post_path(post), method: :delete, data: { confirm: '削除する?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>